<?xml version="1.0" encoding="UTF-8"?>
<Context path="/venderBackend">
    <Resource 
        name="jdbc/comicdb" 
        auth="Container" 
        type="javax.sql.DataSource"
        driverClassName="com.mysql.jdbc.Driver" 
        maxIdle="2"
        maxWait="5000"
        username="root" 
        password="root"
        url="jdbc:mysql://127.0.0.1:3306/comicdb?serverTimezone=CST"
        maxActive="30"
        removeAbandoned="true"
        removeAbandonedTimeout="28800"
        validationQuery="select 1"
        testOnBorrow="true"
        testWhileIdle="true"
        timeBetweenEvictionRunsMillis="30000"
        minEvictableIdleTimeMillis="60000"
    />
    <Resource 
        name="jdbc/super8db" 
        auth="Container" 
        type="javax.sql.DataSource"
        driverClassName="com.mysql.jdbc.Driver" 
        maxIdle="2"
        maxWait="5000"
        username="root" 
        password="root"
        url="jdbc:mysql://127.0.0.1:3306/super8db?serverTimezone=CST"
        maxActive="30"
        removeAbandoned="true"
        removeAbandonedTimeout="28800"
        validationQuery="select 1"
        testOnBorrow="true"
        testWhileIdle="true"
        timeBetweenEvictionRunsMillis="30000"
        minEvictableIdleTimeMillis="60000"
    />
</Context>
